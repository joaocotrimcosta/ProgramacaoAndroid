<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp" tools:context=".MainActivity">

    <TextView
        android:id="@+id/displayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"
        android:background="#EEEEEE"
        android:padding="16dp"
        android:text="0"
        android:textSize="24sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:orientation="horizontal">

        <Button
            style="@style/CalculatorButton"
            android:text="7"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorButton"
            android:text="8"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorButton"
            android:text="9"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorOperatorButton"
            android:text="/"
            android:onClick="onButtonClick" />

        <Button
            style="@style/CalculatorButton"
            android:text="4"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorButton"
            android:text="5"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorButton"
            android:text="6"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorOperatorButton"
            android:text="*"
            android:onClick="onButtonClick" />

        <Button
            style="@style/CalculatorButton"
            android:text="1"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorButton"
            android:text="2"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorButton"
            android:text="3"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorOperatorButton"
            android:text="-"
            android:onClick="onButtonClick" />

        <Button
            style="@style/CalculatorButton"
            android:text="0"
            android:layout_columnSpan="2"
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorButton"
            android:text="."
            android:onClick="onButtonClick" />
        <Button
            style="@style/CalculatorOperatorButton"
            android:text="+"
            android:onClick="onButtonClick" />

        <Button
            style="@style/CalculatorOperatorButton"
            android:text="="
            android:layout_columnSpan="4"
            android:onClick="onCalculateClick" />
    </GridLayout>

</LinearLayout>